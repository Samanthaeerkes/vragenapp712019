<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.vragenapp" version="1.7.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Vragen app</name>
    <description>
        Martijn van Schaik
    </description>
    <author email="support@phonegap.com" href="http://phonegap.com">
        PhoneGap Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <platform name="browser">
        <preference name="FadeSplashScreen" value="false" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3000" />
        <preference name="ShowSplashScreen" value="false" />
        <preference name="SplashScreenWidth" value="600" />
        <preference name="SplashScreenHeight" value="300" />
        <preference name="SplashScreenSpinnerColor" value="white" />
    </platform>
    <platform name="android">
        <preference name="SplashScreenSpinnerColor" value="#834d4d" />
    </platform>
    <platform name="android">
        <icon density="xhdpi" src="res/icon/android/icon-xhdpi-icon.png" />
        <icon density="xxhdpi" src="res/icon/android/icon-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon-xxxhdpi-icon.png" />
    </platform>
    <splash platform="android" src="splash.png" />
    <splash platform="android" qualifier="port-ldpi" src="res/screen/android/splash-port-ldpi-screen.png" />
    <splash platform="android" qualifier="port-mdpi" src="res/screen/android/splash-port-mdpi-screen.png" />
    <splash platform="android" qualifier="port-hdpi" src="res/screen/android/splash-port-hdpi-screen.png" />
    <splash platform="android" qualifier="port-xhdpi" src="res/screen/android/splash-port-xhdpi-screen.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <script type="javascript">centeredLayout.setGravity(Gravity.BOTTOM);</script>
    <engine name="android" spec="~7.1.4" />
    <plugin name="cordova-plugin-battery-status" spec="~1.2.4" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <plugin name="cordova-plugin-media-capture" spec="~1.4.3" />
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="cordova-plugin-file" spec="~4.3.3" />
    <plugin name="cordova-plugin-geolocation" spec="~2.4.3" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.7" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.3" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.5" />
    <plugin name="cordova-plugin-splashscreen" spec="https://github.com/apache/cordova-plugin-splashscreen.git" />
    <plugin name="cordova-plugin-whitelist" spec="1.3.3" />
</widget>
